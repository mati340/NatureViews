<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colman.natureviews">

    <application
        android:name=".NatureViewsApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_trans"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_trans"
        android:supportsRtl="true"
        android:theme="@style/Theme.NatureViews">

        <activity android:name=".activities.HomeActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.RegisterPageActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.LoginPageActivity" android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activities.SplashActivity" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>