<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A4157"
    tools:context=".fragments.NewPostFragment">

    <TextView
        android:id="@+id/new_post_fragment_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="New Post"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/new_post_fragment_title_rdit_text"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:background="#214F68"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:padding="6dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CDCDCD"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_post_fragment_header_text_view" />

    <EditText
        android:id="@+id/new_post_fragment_content_edit_text"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="24dp"
        android:background="#214F68"
        android:ems="10"
        android:gravity="start|top"
        android:hint="write your post here..."
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CDCDCD"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_post_fragment_header_text_view" />

    <Button
        android:id="@+id/new_post_fragment_publish_btn"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="#3BBFBF"
        android:text="Publish"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/new_post_fragment_content_edit_text"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>