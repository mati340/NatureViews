<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.EditProfileFragment">

    <ImageView
        android:id="@+id/edit_profile_fragment_background_image_view"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/edit_profile_fragment_close_btn"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#00146D95"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_profile_fragment_username_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#CDCDCD"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="264dp" />

    <Button
        android:id="@+id/edit_profile_fragment_save_btn"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3BBFBF"
        android:text="Save"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="404dp" />

    <EditText
        android:id="@+id/edit_profile_fragment_info_edit_text"
        android:layout_width="363dp"
        android:layout_height="71dp"
        android:alpha="0.8"
        android:background="#1C323E"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Write your profile info here..."
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CDCDCD"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="325dp" />

    <ImageView
        android:id="@+id/edit_profile_fragment_email_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_baseline_person_24"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="269dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_profile_fragment_profile_image_view"
        android:layout_width="250dp"
        android:layout_height="224dp"
        android:padding="2dp"
        android:src="@drawable/profile_pic_placeholder"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="24dp" />

    <ProgressBar
        android:id="@+id/edit_profile_fragment_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:background="#1A4157"
        android:hapticFeedbackEnabled="false"
        android:padding="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>